<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ege Ro-Ro</title>
    <link rel="stylesheet" href="~/ege roro/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/ege roro/assets/css/style.css" />
</head>
<body>
    <!-- Minimal Header: Sadece Logo ve/veya basit linkler -->
    <header class="py-3 border-bottom">
        <div class="container text-center">
            <a href="/"><img src="~/ege roro/assets/img/logo/logo.svg" alt="Logo" style="max-width: 150px;" /></a>
        </div>
    </header>


    <main class="py-4">
        @RenderBody()
    </main>

    <footer class="py-3 border-top text-center">
        <div class="container">
            &copy; 2025 Ege Ro-Ro. Tüm hakları saklıdır.
        </div>
    </footer>

    <script src="~/ege roro/assets/js/jquery.min.js"></script>
    <script src="~/ege roro/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
